@inherits LayoutComponentBase

<div class="d-flex">
    <NavMenu />

    <div class="main-content flex-grow-1" style="margin-left: 220px; min-height: 100vh; background-color: #f8f9fa;">
        <header class="top-bar d-flex justify-content-between align-items-center px-4 py-3 bg-white border-bottom shadow-sm">
            <h5 class="m-0">Sistema de Inventario</h5>
            <a class="text-decoration-none" href="https://learn.microsoft.com/aspnet/core/" target="_blank">
                <i class="bi bi-question-circle me-1"></i> Ayuda
            </a>
        </header>

        <div class="content p-4">
            @Body
        </div>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Ha ocurrido un error inesperado.
    <a href="." class="reload">Recargar</a>
    <span class="dismiss">🗙</span>
</div>

